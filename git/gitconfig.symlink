[user]
	name = sharkdp
	email = davidpeter@web.de
[credential]
	helper = cache --timeout=8640000
[merge]
	tool = diffuse
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	di = diff
	dis = diff --staged
	lol = log --graph --decorate --pretty=oneline --abbrev-commit --all
	lsignored = ls-files . --ignored --exclude-standard --others
[push]
	default = simple
[color]
	ui = true
[core]
	pager = less -F -X
