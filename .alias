# Edit config files
alias vimrc='vim ~/.cf/.vimrc'
alias bashrc='vim ~/.cf/.bashrc && rehash'
alias i3conf='vim ~/.cf/.i3/config && i3 restart'
alias zshrc='vim ~/.cf/.zshrc && rehash'

# Scripts
alias getpw='python ~/Informatik/python/lastpass-python/getpw.py'
alias paperlocator='/home/shark/pl/cli/paperlocator'
alias tinytag='python3 /home/shark/Informatik/python/tinytag/tinytag.py'

# Continuously run latexmk in the background on a TeX file
# (calls pdf viewer, see ~/.latexmkrc)
alias clatexmk='latexmk -pvc -pdf'

# Zsh filetype aliases
alias -s tex='svim'
alias -s pdf='background okular'
alias -s hs='vim'
alias -s js='vim'
alias -s html='vim'
alias -s py='vim'
alias -s css='vim'
alias -s less='vim'

alias nvidia-settings-opti='optirun -b none nvidia-settings -c :8'

# trigger certain programs on file change
alias tg_doctest='trigger "doctest #1"'
alias tg_make='trigger "make"'
alias tg_python='py "make"'
