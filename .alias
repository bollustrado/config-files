# essentials
alias ..='cd ..'
alias cp='cp -v'

# ls essentials
alias ls='ls --color=auto'
alias sl='ls'
alias ll='ls -lh'
alias l='ls -alh'
alias lsrecent='ls -l --sort=time -r'

# program default options / shortcuts
alias py='python3'
alias py2='python2'
alias ipy='ipython3'
alias txz='tar xvzf'
alias txj='tar xvjf'
alias nc='ncftpbookmarks'
alias grep='grep --color'
alias am='alsamixer'
alias df='df -h'
alias git='LC_ALL=en_US git'
alias svim='vim --servername vim'
alias gnuplot='rlwrap -c -a gnuplot'
alias pf='pointfree'

# SSH
